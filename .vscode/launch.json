  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug api server",
      "type": "python",
      "request": "attach",
      "port": 8765,
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/api",
          "remoteRoot": "/srv/api"
