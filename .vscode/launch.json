{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug api server",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "127.0.0.1",
        "port": 8765
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/api",
          "remoteRoot": "/srv/api"
        }
      ],
      "logToFile": true,
      "justMyCode": false
    },
    {
      "name": "debug client app",
      "type": "chrome",
      "request": "attach",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/app"
    }
  ]
}